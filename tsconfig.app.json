{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@vue-calendar-next": ["./package/index.ts"],
      "@vue-calendar-next/utils": ["./packages/utils/index.ts"],
      "@vue-calendar-next/hooks": ["./packages/hooks/index.ts"],
      "@vue-calendar-next/components": ["./packages/components/index.ts"],
      "@vue-calendar-next/*": ["./package/*"]
    }
  }
}
